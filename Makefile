CC = c++ 
NAME = IRC
SRC =	src/main.cpp	\
		src/Client.cpp \
		src/Server.cpp
HEADER =	inc/IRC.hpp \
			inc/Client.hpp \
			inc/Server.hpp

OBJ=$(SRC:.cpp=.o)
CFLAGS = -Werror -Wall -Wextra -g3 -std=c++98
INC = -I inc/

GREEN=\033[0;92m
YELLOW=\033[0;33m
RED=\033[0;31m
END=\033[0m

all : $(NAME) _capy

%.o : %.cpp $(HEADER) 
	$(CC) $(CFLAGS) $(INC) -c $< -o $@

$(NAME) : $(OBJ)
	$(CC) $(CFLAGS) $(INC) $(OBJ) -o $(NAME)

re : fclean all

clean :
	rm -rf $(OBJ)

run : all
	clear && ./$(NAME) $(ARG)

fclean : clean
	@rm -rf $(NAME)

.PHONY : clean re fclean all

_capy :
	@echo	"$(GREEN)⠀⠀⠀⠀⠀⠀⠀⠀⠀⠀⠀⠀⢀⡀⠀⠀⠀⠀⠀⠀⠀⠀⠀⠀⠀⠀⠀⠀⠀⠀⠀⠀⠀⠀⠀⠀⠀⠀⠀⠀⠀⠀⠀⠀⠀⠀⠀ "
